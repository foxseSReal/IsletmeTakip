<Window x:Class="IsletmeTakip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IsletmeTakip"
        mc:Ignorable="d"
        Style="{StaticResource MainBackground}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ThreeDBorderWindow"
        ResizeMode="NoResize"
        Title="İsletme Takip" Width="1280" Height="720"
        >

    <WindowChrome.WindowChrome>
        <WindowChrome 
            CaptionHeight="0"  
            ResizeBorderThickness="5"
            GlassFrameThickness="0"
            CornerRadius="10" />
    </WindowChrome.WindowChrome>

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Title Bar-->
        <Grid x:Name="TitleBar" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Background="Transparent" MouseLeftButtonDown="TitleBar_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0 10 0 0" Orientation="Horizontal" Grid.Row="0">
                <materialDesign:PackIcon Kind="NotebookMultiple" Width="50" Height="30" Foreground="White"/>
                <TextBlock Text="İŞLETME  TAKİP" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="White" FontWeight="SemiBold" FontFamily="/Resources/NewFonts/Pacifico-Regular.ttf#Pacifico"/>

            </StackPanel>
            <StackPanel Margin="0 0 0 0" Orientation="Horizontal" Grid.Column="1">
                <Button Style="{StaticResource MinimizeButton}" Click="MinimizeButton_Click">
                    <materialDesign:PackIcon Foreground="Black" Kind="Minus" Width="25" Height="25"/>
                </Button>
                <Button Style="{StaticResource MaximizeButton}" Click="MaximizeButton_Click">
                    <materialDesign:PackIcon Foreground="Black" Kind="SquareOutline" Width="25" Height="25"/>
                </Button>
                <Button Style="{StaticResource CloseButton}" Click="CloseButton_Click">
                    <materialDesign:PackIcon Foreground="Black" Kind="Close" Width="25" Height="25"/>
                </Button>
            </StackPanel>
        </Grid>

        <!--Orta Grid-->
        <Grid Grid.Column="1" Grid.Row="1">
            <UniformGrid>
                <Border Padding="25 0 0 0" Width="860" Height="650" CornerRadius="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal" Grid.Row="0">
                            <Button Background="White" Margin="10 50 0 0" Style="{DynamicResource TemelButtonSol}">
                                <StackPanel>
                                    <materialDesign:PackIcon Kind="PlusBoxMultipleOutline" Width="50" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" />
                                    <TextBlock FontSize="28" Text="İşlem Ekle" FontFamily="/Resources/NewFonts/Modak-Regular.ttf#Modak"/>
                                </StackPanel>
                            </Button>
                            <Button Background="White" Margin="10 50 0 0" Style="{DynamicResource TemelButtonOrta}">
                                <StackPanel>
                                    <materialDesign:PackIcon Kind="BookOpenVariantOutline" Width="50" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" />
                                    <TextBlock FontSize="28" Text="Gelir Gider Listele" FontFamily="/Resources/NewFonts/Modak-Regular.ttf#Modak"/>
                                </StackPanel>
                            </Button>
                            <Button Background="White" Margin="10 50 0 0" Style="{DynamicResource TemelButtonSag}">
                                <StackPanel>
                                    <materialDesign:PackIcon Kind="ClipboardTextOutline" Width="50" Height="50" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="Black" />
                                    <TextBlock FontSize="28" Text="Kategoriler" FontFamily="/Resources/NewFonts/Modak-Regular.ttf#Modak"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel  Orientation="Horizontal" Grid.Row="1">
                            <Button Background="White" Margin="10 -40 0 0" Style="{DynamicResource TemelButtonSol}"/>
                            <Button Background="White" Margin="10 -40 0 0" Style="{DynamicResource TemelButtonOrta}"/>
                            <Button Background="White" Margin="10 -40 0 0" Style="{DynamicResource TemelButtonSag}"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="2">
                            <Button Background="White" Margin="10 -40 0 0" Style="{DynamicResource TemelButtonSol}"/>
                            <Button Background="White" Margin="10 -40 0 0" Style="{DynamicResource TemelButtonOrta}"/>
                            <Button Background="White" Margin="10 -40 0 0" Style="{DynamicResource TemelButtonSag}"/>
                        </StackPanel>
                        <Border Grid.Row="1" Style="{StaticResource BorderLikeSeperator}"/>
                    </Grid>
                </Border>
            </UniformGrid>
        </Grid>

        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="200"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical">
                <TextBlock Text="12:23" x:Name="_saat" FontSize="56" FontWeight="SemiBold" Foreground="White" HorizontalAlignment="Center" FontFamily="/Resources/NewFonts/Pacifico-Regular.ttf#Pacifico"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>
