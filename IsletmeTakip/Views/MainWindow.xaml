<Window x:Class="IsletmeTakip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IsletmeTakip"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Background="{StaticResource MaterialDesignLightSeparatorBackground}"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ThreeDBorderWindow"
        ResizeMode="CanResize"
        Title="İsletme Takip" Width="1280" Height="720"
        >

    <WindowChrome.WindowChrome>
        <WindowChrome 
            CaptionHeight="0"  
            ResizeBorderThickness="5"
            GlassFrameThickness="0"
            CornerRadius="10" />
    </WindowChrome.WindowChrome>

    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--Title Bar-->
        <Grid x:Name="TitleBar" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="0" Background="{StaticResource CharcoalBrush}" MouseLeftButtonDown="TitleBar_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <materialDesign:PackIcon Kind="NotebookMultiple" Width="50" Height="30" Foreground="Wheat"/>
                <TextBlock Text="İŞLETME  TAKİP" VerticalAlignment="Center" Margin="10,0,0,0" Foreground="Wheat" FontWeight="SemiBold" FontFamily="/Resources/NewFonts/Pacifico-Regular.ttf#Pacifico"/>
                
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Column="2">
                <Button Style="{StaticResource MinimizeButton}" Click="MinimizeButton_Click">
                    <materialDesign:PackIcon Foreground="Black" Kind="Minus" Width="25" Height="25"/>
                </Button>
                <Button Style="{StaticResource CloseButton}" Click="CloseButton_Click">
                    <materialDesign:PackIcon Foreground="Black" Kind="Close" Width="25" Height="25"/>
                </Button>
            </StackPanel>
        </Grid>

        <!--Orta Grid-->
        <Grid Grid.Column="0" Grid.Row="1">
            <Border Width="800" Height="680" CornerRadius="20" Background="{StaticResource Grey300Brush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">

                    </StackPanel>
                    <StackPanel Grid.Row="1">

                    </StackPanel>
                    <StackPanel Grid.Row="2">

                    </StackPanel>

                </Grid>
            </Border>
        </Grid>

        <!--Sag Grid-->
        <Grid Grid.Column="1" Grid.Row="1">
            <Border Height="680" CornerRadius="20 0 0 20" Background="{StaticResource Grey300Brush}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
